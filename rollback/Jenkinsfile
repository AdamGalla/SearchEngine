pipeline {
    parameters {
        string(name: 'VERSION', defaultValue: '', description: 'Version of the application')
    }

    agent any

    stages {
        stage('Rollback') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'DockerHub', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
                    sh 'docker images --filter=reference="adm14/loadbalancer" --format "{{.ID}}" | ForEach-Object { docker rmi -f $_ }'
                    sh 'docker images --filter=reference="adm14/searchapi" --format "{{.ID}}" | ForEach-Object { docker rmi -f $_ }'
                    sh 'docker images --filter=reference="adm14/dataformatter" --format "{{.ID}}" | ForEach-Object { docker rmi -f $_ }'
                    sh 'docker images --filter "dangling=true" --format "{{.ID}}" | ForEach-Object { docker rmi -f $_ }'
                    sh 'docker login -u %USERNAME% -p %PASSWORD%'
                    sh "docker pull adm14/loadbalancer:%VERSION%"
                    sh "docker pull adm14/searchapi:%VERSION%"
                    sh "docker pull adm14/dataformatter:%VERSION%"
                    sh "docker-compose up -d"
                }
               
            }
        }
    }
}